<div>
    <InputCheckbox id="@Id" ValueExpression="ValueExpression" />
    <label for="@Id">
        <span>
            <svg viewBox="0 0 12 10" height="10px" width="12px">
                <polyline points="1.5 6 4.5 9 10.5 1"></polyline>
            </svg>
        </span>
        @if (Label is not null) {
            <span>@Label</span>
        }
    </label>
</div>

